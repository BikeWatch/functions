{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get"
      ],
      "route": "Angle/Max"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "inputDocument",
      "databaseName": "telemetric",
      "collectionName": "{uuid}",
      "connectionStringSetting": "COSMOS_CONNECTION_URI",
      "sqlQuery": "SELECT MAX(ABS(c.pitch)) as pitch, MAX(ABS(c.roll)) as roll FROM c WHERE ({to} < c.dateTime) AND (c.dateTime > {from})"
    }
  ]
}
